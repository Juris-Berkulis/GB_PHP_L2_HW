{
    "name": "juris-berkulis/gb_php_l2_hw",
    "autoload": {
        "psr-4": {
            "JurisBerkulis\\GbPhpL2Hw\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JurisBerkulis\\GbPhpL2Hw\\UnitTests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Juris-Berkulis",
            "email": "krztfjrbhm1@gmail.com"
        }
    ],
    "scripts": {
        "test": "vendor/bin/phpunit --testdox --colors=always",
        "test-mode-coverage-html": "php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-html coverage_report --coverage-filter src",
        "test-mode-coverage-clover": "php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-clover coverage_report.xml --coverage-filter src",
        "test-mode-coverage": "php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-filter src"
    },
    "require": {
        "fakerphp/faker": "^1.24",
        "ext-pdo": "*",
        "symfony/polyfill-uuid": "^1.32",
        "psr/container": "^2.0",
        "monolog/monolog": "^3.9"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "^12.2"
    }
}
